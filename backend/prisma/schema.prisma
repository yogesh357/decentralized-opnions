generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int    @id @default(autoincrement())
  address String @unique
  tasks   Task[]
}

model Worker {
  id             Int          @id @default(autoincrement())
  address        String       @unique
  submissions    Submission[]
  // balance        Balance?
  // balance_Id     Int
  pending_amount Int
  locked_amount  Int
}

